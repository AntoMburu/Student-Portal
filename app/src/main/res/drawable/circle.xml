<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="ring"
            android:thicknessRatio="55"
            android:useLevel="false">
              <solid
                  android:color="@color/cardview_shadow_start_color"

                 />
        </shape>

    </item>
    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="55"

                android:useLevel="true">
                <gradient
                    android:startColor="@color/design_default_color_primary_dark"
                    android:endColor="@color/design_default_color_on_primary"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>